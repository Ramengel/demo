{
    "restartable": "rs",
    "ignore": [".git", "node_modules/", "dist/", "coverage/"],
    "watch": ["src/"],
    "legacyWatch": true,
    "verbose": false,
    "execMap": {
      "ts": "node -r ts-node/register"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "exec": "ts-node --files ./src/index.ts",
    "ext": "js,json,ts"
}